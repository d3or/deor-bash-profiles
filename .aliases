#!/usr/bin/env bash

# NAVIGATION
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias gocd="cd ~/desktop/code"
alias code="code-insiders ."
alias mrp="cd ~/desktop/code/module-monorepo && code-insiders ."
alias mup="cd ~/desktop/code/module-monitoring && yarn start-mup"

# COMMON DIRECTORIES
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dc="cd ~/Documents"
alias p="cd ~/Documents/projects"
alias home="cd ~"

# GIT
alias g="git"
alias ga="git add ."
alias gam="git add . && git commit -m"
alias gs="git status"
alias gd="git diff"
alias gb="git branch"
alias gm="git checkout master"
alias gpm="git push origin master"

# KUBECTL
alias k="kubectl"
alias kg="kubectl get"
alias kd="kubectl describe"
alias kdel="kubectl delete"
alias km="kubectl config use-context do-nyc1-module-nft"
alias k3="kubectl config use-context do-tor1-module-3mhz"